{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "filesGlob": ["./**/*.ts"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "strict": true,
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "isolatedModules": false,
    "lib": ["dom", "es5", "es6", "es7", "es2015.promise"],
    "sourceMap": true,
    "pretty": true
  }
}
